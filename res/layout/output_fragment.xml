<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/monthlyPaymentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:text="Monthly Payment"
        android:textColor="@android:color/secondary_text_light"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignTop="@+id/monthlyPaymentOutput"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/totalInterestOutput"
        android:layout_marginLeft="5sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/monthlyPaymentOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/monthlyPaymentAmount"
        android:width="150sp"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_marginLeft="10sp"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        />

    <EditText
        android:id="@+id/monthlyPaymentUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/monthlyPaymentOutput"
        android:width="50sp"
        android:text="$"
        android:textColor="@android:color/darker_gray"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignBaseline="@+id/monthlyPaymentOutput"
        android:background="@android:color/transparent"
        android:textStyle="bold" />




    <EditText
        android:id="@+id/totalInterest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:text="Total Interest"
        android:textColor="@android:color/secondary_text_light"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignBottom="@+id/totalInterestOutput"
        android:layout_alignTop="@+id/totalInterestOutput"
        android:layout_marginLeft="5sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/totalInterestOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthlyPaymentOutput"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/monthlyPaymentAmount"
        android:layout_marginLeft="10sp"
        android:width="150sp"
        android:inputType="none"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        />

    <EditText
        android:id="@+id/totalInterestUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/totalInterestOutput"
        android:width="50sp"
        android:text="$"
        android:textColor="@android:color/darker_gray"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignBaseline="@+id/totalInterestOutput"
        android:background="@android:color/transparent"
        android:textStyle="bold" />





    <EditText
        android:id="@+id/propertyTax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:text="Total Property Tax"
        android:textColor="@android:color/secondary_text_light"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignBottom="@+id/propertyTaxOutput"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/propertyTaxOutput"
        android:layout_marginLeft="5sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/propertyTaxOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalInterestOutput"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/propertyTax"
        android:layout_marginLeft="10sp"
        android:width="150sp"
        android:inputType="none"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        />

    <EditText
        android:id="@+id/propertyTaxUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/propertyTaxOutput"
        android:width="50sp"
        android:text="$"
        android:textColor="@android:color/darker_gray"
        android:inputType="none"
        android:textIsSelectable="true"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/propertyTaxOutput"
        android:textStyle="bold" />





    <EditText
        android:id="@+id/payOffDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150sp"
        android:text="Pay Off Date"
        android:textColor="@android:color/secondary_text_light"
        android:background="@android:color/transparent"
        android:inputType="none"
        android:textIsSelectable="true"
        android:layout_alignBottom="@+id/payOffDateOutput"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/payOffDateOutput"
        android:layout_marginLeft="5sp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/payOffDateOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/propertyTaxOutput"
        android:layout_marginTop="15sp"
        android:layout_toEndOf="@+id/payOffDate"
        android:layout_marginLeft="10sp"
        android:width="180sp"
        android:inputType="none"
        android:textIsSelectable="true"
        android:textStyle="bold"
        android:textColor="@android:color/secondary_text_light"
        />

</RelativeLayout>